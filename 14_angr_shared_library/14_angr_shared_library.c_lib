#include <stdio.h>
#include <stdlib.h>
#include <string.h>

#define USERDEF "PPBVDNMJ"
#define LEN_USERDEF 8

char msg[] = "";

void print_msg() {
  printf("%s", msg);
}

int complex_function(int value, int i) {
#define LAMBDA 41
  if (!('A' <= value && value <= 'Z')) {
    printf("Try again.\n");
    exit(1);
  }
  return ((value - 'A' + (LAMBDA * i)) % ('Z' - 'A' + 1)) + 'A';
}

int validate(char* buffer, int length) {
  if (length < 8) {
    return 0;
  }

  char password[20];

  for (int i=0; i < 20; ++i) {
    password[i] = 0;
  }

  strncpy(password, USERDEF, LEN_USERDEF);

  for (int i=0; i<8; ++i) {
    buffer[i] = complex_function(buffer[i], i);
  }

  return !strcmp(buffer, password);
}